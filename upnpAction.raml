schemas:
  - upnpAction: !include oic.r.upnp.action.json

traits:
  - interface:
      queryParameters:
        if:
          enum: ["oic.if.a","oic.if.baseline"]

/upnpActionResURI:
  description: |
    This resource provides the action available on the service.
    The sources are an array of mediaSource(s) as separately defined.
    The basic resource type oic.r.service is not able provide the inputArgs and outputArgs which are provide here in this device.

  displayName: UPnP Action
  is: [ interface ]

  post:
    description: |
      Changes the status of the action(s).
      Allows changes of the sourceName and the status.
    body:
      application/json:
        schema: upnpAction
        example: |
          {
            "rt": ["oic.r.upnp.action"],
            "id":     "unique_example_id",
            "actionName": "action_name",
            "inputArgs": [
            {
             "genName": "arg_name_1st",
             "genType": "arg_type_1st",
             "genValue": "arg_value_1st"
            },
            {
             "genName": "arg_name_nth",
             "genType": "arg_type_nth",
             "genValue": "arg_value_nth"
            }
            ]
          }
    responses:
      200:
        body:
          application/json:
            schema: upnpAction
            example: |
              {
              "rt": ["oic.r.upnp.action"],
              "id": "unique_example_id",
              "actionName": "action_name",
              "outputArgs": [
              {
              "genName": "arg_name_1st",
              "genType": "arg_type_1st",
              "genValue": "arg_value_1st"
              },
              {
              "genName": "arg_name_nth",
              "genType": "arg_type_nth",
              "genValue": "arg_value_nth"
              }
                ]
              }
