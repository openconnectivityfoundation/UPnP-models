{
  "id": "oic.r.upnp.service.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "Copyright (c) 2017 Open Connectivity Foundation, Inc. All rights reserved.",
  "title": "UPnP Service",
  "definitions": {
    "actionLink": {
      "type": "object",
      "properties": {
        "rt": {
          "type": "array",
          "items" : {
              "type" : "string",
              "maxLength": 64
            },
          "minItems" : 1,
          "default": ["oic.r.upnp.action"]
        },
        "if": {
          "type": "array",
          "items": {
              "type" : "string",
              "enum" : ["oic.if.baseline", "oic.if.ll", "oic.if.b", "oic.if.rw", "oic.if.r", "oic.if.a", "oic.if.s" ]
            },
          "minItems": 1,
          "default": ["oic.if.r", "oic.if.baseline"]
        }
      }
    },
    "serviceStateTableLink": {
      "type": "object",
      "properties": {
        "rt": {
          "type": "array",
          "items" : {
              "type" : "string",
              "maxLength": 64
            },
          "minItems" : 1,
          "default": ["oic.r.upnp.stateVariable"]
        },
        "if": {
          "type": "array",
          "items": {
              "type" : "string",
              "enum" : ["oic.if.baseline", "oic.if.ll", "oic.if.b", "oic.if.rw", "oic.if.r", "oic.if.a", "oic.if.s" ]
            },
          "minItems": 1,
          "default": ["oic.if.r", "oic.if.baseline"]
        }
      }
    },
    "upnpServiceLinks": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "#/definitions/actionLink" },
          { "$ref": "#/definitions/serviceStateTableLink" }
        ]
      }
    },
    "oic.r.upnp.service": {
      "properties": {
        "serviceType": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the type of the UPnP Service Type"
        },
        "serviceId": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the type of the UPnP Service ID"
        },
        "scpdUrl": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the URL to service description"
        },
        "controlUrl": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the URL for control"
        },
        "eventSubUrl": {
          "type": "string",
          "description": "Specifies the URL for eventing"
        },
        "links": {
          "$ref": "#/definitions/upnpServiceLinks"
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    {"$ref": "oic.core.json#/definitions/oic.core"},
    {"$ref": "oic.baseResource.json#/definitions/oic.r.baseresource"},
    {"$ref": "#/definitions/oic.r.upnp.service"}
  ],
  "required": ["serviceType","serviceId","scpdUrl","controlUrl","eventSubUrl","links"]
}
