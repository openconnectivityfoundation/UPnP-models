  "title": "Icon",
  "definitions": {
    "oic.r.icon": {
      "properties": {
        "mimeType": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the format of the MIME Type"
        },
        "width": {
          "type": "integer",
          "minimum": 1,
          "readOnly": true,
          "description": "Specifies the width in pixels"
        },
        "height": {
          "type": "integer",
          "minimum": 1,
          "readOnly": true,
          "description": "Specifies the height in pixels"
        },
        "media": {
          "type": "string",
          "maxLength": 256,
          "format" : "uri",
          "readOnly": true,
          "description": "Specifies the media URL to icon"
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    {"$ref": "oic.core.json#/definitions/oic.core"},
    {"$ref": "oic.baseResource.json#/definitions/oic.r.baseresource"},
    {"$ref": "#/definitions/oic.r.icon"}
  ],
  "required": ["mimeType","width","heights","media"]
}
