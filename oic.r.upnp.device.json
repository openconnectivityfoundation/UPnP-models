{
  "id": "oic.r.upnp.device.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "Copyright (c) 2017 Open Connectivity Foundation, Inc. All rights reserved.",
  "title": "UPnP Device",
  "definitions": {
    "iconLink": {
      "type": "object",
      "properties": {
        "rt": {
          "type": "array",
          "items" : {
              "type" : "string",
              "maxLength": 64
            },
          "minItems" : 1,
          "default": ["oic.r.icon"]
        },
        "if": {
          "type": "array",
          "items": {
              "type" : "string",
              "enum" : ["oic.if.baseline", "oic.if.ll", "oic.if.b", "oic.if.rw", "oic.if.r", "oic.if.a", "oic.if.s" ]
            },
          "minItems": 1,
          "default": ["oic.if.r"]
        }
      }
    },
    "serviceLink": {
      "type": "object",
      "properties": {
        "rt": {
          "type": "array",
          "items" : {
              "type" : "string",
              "maxLength": 64
            },
          "minItems" : 1,
          "default": ["oic.r.upnp.service"]
        },
        "if": {
          "type": "array",
          "items": {
              "type" : "string",
              "enum" : ["oic.if.baseline", "oic.if.ll", "oic.if.b", "oic.if.rw", "oic.if.r", "oic.if.a", "oic.if.s" ]
            },
          "minItems": 1,
          "default": ["oic.if.r", "oic.if.baseline"]
        }
      }
    },
    "upnpDeviceLinks": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "#/definitions/iconLink" },
          { "$ref": "#/definitions/serviceLink" }
        ]
      }
    },
    "oic.r.upnp.device": {
      "properties": {
        "deviceType": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the type of the UPnP Device Type"
        },
        "friendlyName": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the Short user-friendly name"
        },
        "manufacturer": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the Manufacturer name"
        },
        "manufacturerURL": {
          "type": "string",
          "readOnly": true,
          "description": "Allowed, Specifies the URL-Website to manufacturer of the device"
        },
        "modelDescription": {
          "type": "string",
          "readOnly": true,
          "description": "Recommended, Specifies the Long user-friendly title of the device"
        },
        "modelName": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the Model name"
        },
        "modelNumber": {
          "type": "string",
          "readOnly": true,
          "description": "Recommended, Specifies the Model number"
        },
        "modelURL": {
          "type": "string",
          "readOnly": true,
          "description": "Allowed, Specifies the URL to model site"
        },
        "serialNumber": {
          "type": "string",
          "readOnly": true,
          "description": "Recommended, Specifies the Manufacturer's serial number"
        },
        "UDN": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the uuid:UUID - Universally Unique IDentifier"
        },
        "UPC": {
          "type": "string",
          "readOnly": true,
          "description": "Allowed, Specifies the Universal Product Code"
        },
        "links": {
          "$ref": "#/definitions/upnpDeviceLinks"
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    {"$ref": "oic.core.json#/definitions/oic.core"},
    {"$ref": "oic.baseResource.json#/definitions/oic.r.baseresource"},
    {"$ref": "#/definitions/oic.r.upnp.device"}
  ],
  "required": ["deviceType","friendlyName","manufacturer","modelName","UDN","links"]
}
