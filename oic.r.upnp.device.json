{
  "id": "http://openinterconnect.org/iotdatamodels/schemas/oic.r.upnp.device.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "Copyright (c) 2016 Open Connectivity Foundation, Inc. All rights reserved.",
  "title": "UPnP Device",
  "definitions": {
    "oic.r.upnp.device": {
      "properties": {
        "deviceType": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the type of the UPnP Device Type"
        },
        "friendlyName": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the Short user-friendly name"
        },
        "manufacturer": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the Manufacturer name"
        },
        "manufacturerURL": {
          "type": "string",
          "readOnly": true,
          "description": "Allowed, Specifies the URL-Website to manufacturer of the device"
        },
        "modelDescription": {
          "type": "string",
          "readOnly": true,
          "description": "Recommended, Specifies the Long user-friendly title of the device"
        },
        "modelName": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the Model name"
        },
        "modelNumber": {
          "type": "string",
          "readOnly": true,
          "description": "Recommended, Specifies the Model number"
        },
        "modelURL": {
          "type": "string",
          "readOnly": true,
          "description": "Allowed, Specifies the URL to model site"
        },
        "serialNumber": {
          "type": "string",
          "readOnly": true,
          "description": "Recommended, Specifies the Manufacturer's serial number"
        },
        "UDN": {
          "type": "string",
          "readOnly": true,
          "description": "Specifies the uuid:UUID - Universally Unique IDentifier"
        },
        "UPC": {
          "type": "string",
          "readOnly": true,
          "description": "Allowed, Specifies the Universal Product Code"
        },
        "iconList": {
          "type": "array",
          "description": "Specifies the Array of Icons",
          "minItems": 0,
          "items": {
            "oneOf": [
              { "$ref": "oic.r.icon.json#" }
            ]
          }
        },
        "serviceList": {
          "type": "array",
          "description": "Specifies the Array of Services",
          "minItems": 0,
          "items": {
            "oneOf": [
              { "$ref": "oic.r.upnp.service.json#" }
            ]
          }
        }
    }
  }
},
  "type": "object",
  "allOf": [
    {"$ref": "oic.core.json#/definitions/oic.core"},
    {"$ref": "oic.baseResource.json#/definitions/oic.r.baseresource"},
    {"$ref": "#/definitions/oic.r.upnp.device"}
  ],
  "required": ["deviceType","friendlyName","manufacturer","modelName","UDN","iconList","serviceList"]
}
