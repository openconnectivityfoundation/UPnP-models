schemas:
  - upnpService: !include oic.r.upnp.service.json

traits:
  - interface:
      queryParameters:
        if:
          enum: ["oic.if.a","oic.if.baseline"]

/upnpServiceResURI:
  description: |
    This resource provides the list of upnp service available on the device.
    The services are an array of upnpService(s) as separately defined.
    The basic resource type oic.r.device is not able provide the actionList which are provide here in this device.

  displayName: UPnP Service
  is: [ interface ]

  get:
    description: |
      Retrieves the current upnp service.
    responses:
      200:
        body:
          application/json:
            schema: upnpService
            example: |
              {
              "rt": ["oic.r.upnp.service"],
              "id": "unique_example_id",
              "serviceType": "service_type",
              "serviceId": "service_id",
              "SCPDURL": "scpd_url_string",
              "controlURL": "control_url_string",
              "eventSubURL": "event_sub_url_string",
              "actionList": [
              {
              "actionName": "action_name_1st"
              },
              {
              "actionName": "action_name_nth"
              }
              ],
              "serviceStateTables": [
              {
              "name": "name_1st",
              "dataType": "dataType_1st"
              },
              {
              "name": "name_nth",
              "dataType": "dataType_nth"
              }
              ]
              }
